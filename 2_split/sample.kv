BoxLayout:
    orientation: 'vertical'
    UpArea:
        size_hint: (1, 1)
        canvas.before:
            Color:
                rgba: (0, 200, 255, 0.5)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Up'
    
    DownArea:
        Label:
            text: 'Down'